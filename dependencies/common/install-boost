set -e

# install dir 
INSTALL_DIR=`pwd`

# determine platform
PLATFORM=`uname`

# vars
BOOST_VERSION=boost_1_53_0
BOOST_DIR=/opt/rstudio-tools/boost/$BOOST_VERSION
BOOST_TAR=rstudio_$BOOST_VERSION.tar.bz2
BOOST_BUILD_DIR=boost-build

# install if we aren't already installed
if ! test -e $BOOST_DIR
then
   # download boost
   BOOST_URL=https://s3.amazonaws.com/rstudio-buildtools/$BOOST_TAR
   if [ "$PLATFORM" == "Darwin" ]
   then
      curl -L $BOOST_URL > $BOOST_TAR
   else
      wget $BOOST_URL -O $BOOST_TAR
   fi
   
   # remove existing boost installation
   sudo rm -rf $BOOST_DIR
  
   # untar source (remove existing)
   rm -rf $BOOST_BUILD_DIR
   mkdir -p $BOOST_BUILD_DIR
   cd $BOOST_BUILD_DIR
   tar --bzip2 -xf ../$BOOST_TAR

   # bootstrap boost
   ./bootstrap.sh  
   
   # special variation of build for osx (multi-arch, tied to 10.5)
   if [ "$PLATFORM" == "Darwin" ]
   then
     sudo ./bjam --prefix=$BOOST_DIR toolset=clang variant=release threading=multi link=static \
                     --with-chrono \
                     --with-date_time \
                     --with-filesystem \
                     --with-iostreams \
                     --with-program_options \
                     --with-regex \
                     --with-signals \
                     --with-system \
                     --with-thread \
                 install
   else
     sudo ./bjam --prefix=$BOOST_DIR variant=release \ 
                     --with-chrono \
                     --with-date_time \
                     --with-filesystem \
                     --with-iostreams \
                     --with-program_options \
                     --with-regex \
                     --with-signals \
                     --with-system \
                     --with-thread \
                 install
   fi

   # go back to the original install dir and remove build dir
   cd $INSTALL_DIR
   sudo rm -rf $BOOST_TAR
   sudo rm -rf $BOOST_BUILD_DIR

else

   echo "$BOOST_VERSION already installed in $BOOST_DIR"

fi

# back to install dir
cd $INSTALL_DIR
