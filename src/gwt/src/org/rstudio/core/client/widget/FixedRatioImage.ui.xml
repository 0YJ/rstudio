<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
<ui:style>
.outer 
{
   display: inline-block;
   width: 100%;
   position: relative;
}

.inner
{
   position: absolute;
   top: 0px;
   left: 0px;
   bottom: 0px;
   right: 0px;
   background-position: center;
   background-size: contain;
}

.source
{
   display: none;
}
</ui:style>
<g:HTMLPanel styleName="{style.outer}">
   <g:Image styleName="{style.source}" ui:field="source_" 
            visible="false">
   </g:Image>
   <g:HTMLPanel ui:field="padding_"></g:HTMLPanel>
   <g:HTMLPanel ui:field="image_" styleName="{style.inner}">
   </g:HTMLPanel>
</g:HTMLPanel>
</ui:UiBinder> 