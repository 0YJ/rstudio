<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
xmlns:g="urn:import:com.google.gwt.user.client.ui">
<ui:style type="org.rstudio.studio.client.workbench.views.source.editors.text.ChunkOutputGallery.GalleryStyle">
.thumbnail {
   opacity: 0.5;
   cursor: pointer;
   transition: opacity 0.5s ease;
   display: block;
   margin-left: 10px;
   margin-right: 10px;
   margin-top: 0px;
   margin-bottom: 10px;
   padding: 3px;
   border: 2px solid gray;
   border-radius: 3px;
   width: 100px;
   height: 61px;
   float: left;
}

.thumbnail:hover {
   opacity: 1;
}

.selected {
   opacity: 1;
}

.viewer {
   clear: both;
}

.filmstrip {
   overflow: hidden;
}
</ui:style>
<g:HTMLPanel>
    <g:FlowPanel styleName="{style.filmstrip}" ui:field="filmstrip_">
    </g:FlowPanel>
    <g:HTMLPanel styleName="{style.viewer}" ui:field="viewer_">
    </g:HTMLPanel>
</g:HTMLPanel>
</ui:UiBinder> 