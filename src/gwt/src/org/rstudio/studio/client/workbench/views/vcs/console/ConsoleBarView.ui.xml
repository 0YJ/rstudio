<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

   <ui:style>
      .input {
         width: 100%;
         border: none;
         margin: 0;
         padding: 0;
         outline: 0;
      }
      .commandBar {
         white-space: nowrap;
      }
      .inline {
         display: inline;
      }
   </ui:style>

   <g:HTMLPanel>
      <table cellpadding="0" cellspacing="0" width="100%">
         <tr>
            <td width="1"><g:Label text="&gt;&#xA0;" styleName="{style.inline}"/></td>
            <td width="100%"><g:TextBox ui:field="input_" styleName="{style.input} fixedWidthFont"/></td>
            <td width="1"><g:Image ui:field="expand_"/></td></tr>
      </table>
   </g:HTMLPanel>

</ui:UiBinder>