<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

   <ui:style>
   .actions {
      float: right;
      cursor: default;
      margin: 1px 0 -10px 0;
      padding: 0;
      line-height: 0;
   }
   .action {
      border: none;
      outline: 0;
      background: none;
      margin: 0;
      padding: 0;
   }
</ui:style>
   <ui:with field="res" type="org.rstudio.core.client.theme.res.ThemeResources" />
   <div class="{style.actions}">
      <nobr><button class="{style.action}" type="button" ui:field="rmEl_"><img src="{res.inlineDeleteIcon.getUrl}"/></button></nobr>
   </div>

</ui:UiBinder>