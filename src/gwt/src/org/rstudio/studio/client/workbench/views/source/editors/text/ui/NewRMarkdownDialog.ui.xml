<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:r="urn:import:org.rstudio.core.client.widget">

	<ui:with field="resources" type="org.rstudio.studio.client.workbench.views.source.editors.text.ui.NewRMarkdownDialog.Resources" />
	<ui:style type="org.rstudio.studio.client.workbench.views.source.editors.text.ui.NewRMarkdownDialog.NewRmdStyle">
	.fillHeight
	{
	  height: 100%;
	}
	
	.templatePanel
	{
	  margin-top: 15px;
	}
	
	.templateList
	{
	  box-sizing: border-box;
	  -moz-box-sizing: border-box;
	  -webkit-box-sizing: border-box;
	}
	
	.templateList option
	{
	  padding: 2px;
     font-size: 120%;
	}
	
	.topLabel
	{
	  font-weight: bold;
	  margin-right: 5px;
	}
	
	.formatPanel
	{
	  padding: 6px;
	  background-color: #e0e0e0;
	  margin-bottom: 10px;
	}
	
	.templateDetails
	{
	  margin-left: 20px;
	}
	
	.textBox
	{
	  padding: 2px;
	}
	
	.authorLabel
	{
	  margin-left: 15px;
	}
	
	.notesLabel
	{
	   color: #505050;
	}
	</ui:style>
	<g:HTMLPanel>
	<g:InlineLabel styleName="{style.topLabel}" text="Title:"></g:InlineLabel>
	<g:TextBox styleName="{style.textBox}" width="250px" ui:field="txtTitle_"></g:TextBox>
	<g:InlineLabel styleName="{style.topLabel} {style.authorLabel}" text="Author:"></g:InlineLabel>
	<g:TextBox styleName="{style.textBox}" width="100px" ui:field="txtAuthor_"></g:TextBox>
	<g:HorizontalPanel height="300px" styleName="{style.templatePanel}">
     <r:WidgetListBox ui:field="listTemplates_"
                styleName="{style.fillHeight} {style.templateList}" 
                width="150px"></r:WidgetListBox>
     <g:HeaderPanel styleName="{style.templateDetails}" width="300px" height="100%">
        <g:FlowPanel styleName="{style.formatPanel}">
           <g:InlineLabel styleName="{style.topLabel}" text="Output Format:"></g:InlineLabel>
           <g:ListBox ui:field="listFormats_"></g:ListBox>
           <g:Label styleName="{style.notesLabel}" ui:field="labelFormatNotes_"></g:Label>
        </g:FlowPanel>
        <g:ScrollPanel height="100%">
           <g:VerticalPanel ui:field="panelOptions_"></g:VerticalPanel>
        </g:ScrollPanel>
     </g:HeaderPanel>
	</g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 