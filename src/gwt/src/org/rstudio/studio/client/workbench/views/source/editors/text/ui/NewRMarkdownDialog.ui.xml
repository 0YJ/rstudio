<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.fillHeight
	{
	  height: 100%;
	}
	
	.formatPanel
	{
	  margin-top: 15px;
	}
	</ui:style>
	<g:HTMLPanel>
	<g:InlineLabel text="Author:"></g:InlineLabel><g:TextBox ui:field="txtAuthor_"></g:TextBox>
	<g:InlineLabel text="Title:"></g:InlineLabel><g:TextBox ui:field="txtTitle_"></g:TextBox>
	<g:LayoutPanel height="300px" styleName="{style.formatPanel}">
	  <g:layer width="33%" height="100%">
	     <g:ListBox ui:field="listTemplates_" styleName="{style.fillHeight}" visibleItemCount="5"></g:ListBox>
	  </g:layer>
	  <g:layer width="67%" left="33%" height="100%">
	     <g:ScrollPanel styleName="{style.fillHeight}">
	        <g:StackPanel ui:field="panelOptions_"></g:StackPanel>
	     </g:ScrollPanel>
	  </g:layer>
	</g:LayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 