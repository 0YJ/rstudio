<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:vcs='urn:import:org.rstudio.studio.client.workbench.views.vcs'
             xmlns:vcs_diff='urn:import:org.rstudio.studio.client.workbench.views.vcs.diff'
             xmlns:rs_widget='urn:import:org.rstudio.core.client.widget'>

   <ui:style>
      .outer {
         background-color: #e1e2e5;
         /*border: 1px solid #999;*/
         margin: -4px;
      }
      .whitebg {
         background-color: white;
      }
   </ui:style>

   <g:SplitLayoutPanel styleName="{style.outer}">
      <g:north size="30">
         <g:HorizontalPanel>
            <g:FlowPanel>
               <rs_widget:ThemedButton ui:field="stageButton_"/>
               <rs_widget:ThemedButton ui:field="discardButton_"/>
               <rs_widget:ThemedButton ui:field="unstageButton_"/>
            </g:FlowPanel>
            <g:CheckBox ui:field="stagedCheckBox_" text="Show staged changes"/>
            <g:ListBox ui:field="contextLines_" visibleItemCount="1" selectedIndex="5">
               <g:item value="5">5 line</g:item>
               <g:item value="10">10 line</g:item>
               <g:item value="25">25 line</g:item>
               <g:item value="50">50 line</g:item>
               <g:item value="-1">All lines</g:item>
            </g:ListBox>
         </g:HorizontalPanel>
      </g:north>
      <g:south size="200">
         <vcs:ChangelistTable styleName="{style.whitebg}" ui:field="changelist_" width="100%" height="100%"/>
      </g:south>
      <g:center>
         <g:LayoutPanel>
            <g:layer left="0" right="8px" top="0" bottom="0">
               <g:ScrollPanel styleName="{style.whitebg}" width="100%" height="100%">
                  <vcs_diff:LineTableView ui:field="lines_" width="100%"/>
               </g:ScrollPanel>
            </g:layer>
            <g:layer right="0" width="8px" top="16px" bottom="16px">
               <vcs_diff:NavGutter ui:field="gutter_" width="100%" height="100%"/>
            </g:layer>
         </g:LayoutPanel>
      </g:center>
   </g:SplitLayoutPanel>

</ui:UiBinder>