<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rs="urn:import:org.rstudio.core.client.widget">
	<ui:with field='res' type='org.rstudio.core.client.theme.res.ThemeResources'/>
	<ui:style>
		.spacedLabel
		{
			padding-right: 3px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:HorizontalPanel verticalAlignment="middle" width="100%">
	    	<g:Label text="File/URL:" styleName="{style.spacedLabel}"/>
	    	<g:cell width="100%">
	    		<g:TextBox ui:field="textResource_" width="100%"/>
	    	</g:cell>
	    	<rs:ThemedButton ui:field="buttonBrowse_" text="Browse"/>
	    </g:HorizontalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 