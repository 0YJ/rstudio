<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rs="urn:import:org.rstudio.core.client.widget"
	xmlns:rsdi="urn:import:org.rstudio.studio.client.workbench.views.environment.dataimport"
	xmlns:rsace="urn:import:org.rstudio.studio.client.workbench.views.source.editors.text">
	<ui:with field="res" type="org.rstudio.studio.client.workbench.views.environment.dataimport.res.DataImportResources"/>
	<ui:style>
		.flexPanel {
			display: -ms-flexbox;
			display: -webkit-flex;
			display: flex;

			-webkit-flex-direction: column;
			-ms-flex-direction: column;
			flex-direction: column;

			margin-bottom: 7px;
		}
		.importLabel {	
			margin-top: 14px;
		}
		.gridViewerFrame {
			margin-top: 3px;
			border: 1px solid #999;
			width: 100%;
			height: 10px;
			
			-ms-flex-grow: 4;
			-webkit-flex-grow: 4;
			flex-grow: 4;
		}
		.optionsPanel {
			display: -ms-flexbox;
			display: -webkit-flex;
			display: flex;

			-ms-flex-grow: 1;
			-webkit-flex-grow: 1;
			flex-grow: 1;

			padding-right: 10px
		}
		.optionsElement {
			-ms-flex-grow: 1;
			-webkit-flex-grow: 1;
			flex-grow: 1;
		}
		.codePanel {
			-ms-flex-grow: 1;
			-webkit-flex-grow: 1;
			flex-grow: 1;

			display: -ms-flexbox;
			display: -webkit-flex;
			display: flex;

			-ms-flex-direction: column;
			-webkit-flex-direction: column;
			flex-direction: column;

			min-width: 300px;
		}
		.codeTextArea {
			width: 100%;
			height: 110px;
			border: 1px solid #999;
		}
		.bottomPanel {
			display: -ms-flexbox;
			display: -webkit-flex;
			display: flex;

			-ms-flex-wrap: wrap;
			-webkit-flex-wrap: wrap;
			flex-wrap: wrap;
		}
		.copyButton {
			margin-left: auto;
			margin-top: 9px;
			height: 20px;
		}
		.copyButton:active {
			top-margin: 11px;
		}
		.headWithButton {
			display: -ms-flexbox;
			display: -webkit-flex;
			display: flex;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.flexPanel}">
	    <rs:FileOrUrlChooserTextBox ui:field="fileOrUrlChooserTextBox_"/>
		<g:Label text="Data Preview:" styleName="{style.importLabel}"/>
		<rs:GridViewerFrame ui:field="gridViewer_" styleName="{style.gridViewerFrame}"/>
		<div class="{style.bottomPanel}">
			<g:HTMLPanel styleName="{style.optionsPanel}">
				<g:HTMLPanel ui:field="optionsHost_" styleName="{style.optionsElement}"/>	
			</g:HTMLPanel>
			<g:HTMLPanel styleName="{style.codePanel}">
			    <div class="{style.headWithButton}">
			        <g:Label text="Code Preview:" styleName="{style.importLabel}"/>
			        <g:PushButton ui:field="copyButton_" styleName="{style.copyButton}">
					</g:PushButton>
			    </div>
				<div class="{style.codeTextArea}">
					<rsace:AceEditorWidget ui:field="codeArea_"/>
				</div>
			</g:HTMLPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 