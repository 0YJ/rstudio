<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rs="urn:import:org.rstudio.core.client.widget"
	xmlns:rsdi="urn:import:org.rstudio.studio.client.workbench.views.environment.dataimport">
	<ui:with field='res' type='org.rstudio.core.client.theme.res.ThemeResources'/>
	<ui:style>
		.flexPanel {
			display: -ms-flexbox;
			display: -webkit-flex;
			display: flex;
			-webkit-flex-direction: column;
			-ms-flex-direction: column;
			flex-direction: column;
		}
		.flexElement {
			margin-top: 10px;
			width: 100%;
		}
		.importLabel {	
			margin-top: 10px;
		}
		.gridViewerFrame {
			margin-top: 3px;
			border: 1px solid #999;
			max-width: 100%;
			height: 10px;
			
			-ms-flex-grow: 1;
			-webkit-flex-grow: 1;
			flex-grow: 4;
		}
		.optionsPanel {
			display: flex;
			direction: row;
		}
		.optionsElement {
			flex-grow: 1;
		}
		.codePanel {
			flex-grow: 1;
			display: flex;
			flex-direction: column;
		}
		.codeTextBox {
			flex-grow: 1;
		}
	</ui:style>
	<g:HTMLPanel styleName='{style.flexPanel}'>
		<rs:FileOrUrlChooserTextBox ui:field="fileOrUrlChooserTextBox_"/>
		<g:Label text="Data Preview:" styleName='{style.importLabel}'/>
		<rs:GridViewerFrame ui:field="gridViewer_" styleName='{style.gridViewerFrame}'/>
		<g:HTMLPanel styleName='{style.codePanel}'>
			<g:Label text="Code Preview:" styleName='{style.importLabel}'/>
			<g:TextBox styleName='{style.codeTextBox}'/>
		</g:HTMLPanel>
		<g:HTMLPanel styleName='{style.optionsPanel}'>
			<g:HTMLPanel ui:field="optionsHost_" styleName='{style.optionsElement}'/>	
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 