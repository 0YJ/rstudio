<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget="urn:import:org.rstudio.core.client.widget">

   <ui:style>
      .outer button {
         margin-right: -4px;
      }

      .control {
         width: 275px;
         border: 1px solid #888 !important;
         background-color: white;
         margin: 0 0 3px 0;
         box-sizing: border-box;
         -moz-box-sizing: border-box;
         -webkit-box-sizing: border-box;
         font-size: 12px;
      }

      .label {
         display: inline-block;
         width: 110px;
      }

      .suggestionLabel {
         display: block;
         float: left;
      }

   </ui:style>

   <g:HTMLPanel styleName="{style.outer}">
      <table cellpadding="0" cellspacing="0">
         <tr>
            <td nowrap="nowrap">
               <div class="{style.label}">Not in dictionary:
               </div><g:TextBox ui:field="txtDisplay_"
                          styleName="{style.control}"
                          readOnly="true"/>
            </td>
            <td><widget:ThemedButton ui:field="btnSkip_"/></td>
         </tr>
         <tr>
            <td nowrap="nowrap">
               <div class="{style.label}">Change to:
               </div><g:TextBox ui:field="txtReplacement_" styleName="{style.control}" />
            </td>
            <td><widget:ThemedButton ui:field="btnIgnoreAll_"/></td>
         </tr>
         <tr>
            <td rowspan="3" nowrap="nowrap" valign="top">
               <div class="{style.label} {style.suggestionLabel}">
                  <!-- reserved for future use -->
                  <br/>
               </div>
               <g:ListBox
                     ui:field="lstSuggestions_"
                     styleName="{style.control}"
                     visibleItemCount="6"/>
            </td>
            <td><widget:ThemedButton ui:field="btnChange_"/></td>
         </tr>
         <tr>
            <td><widget:ThemedButton ui:field="btnChangeAll_"/></td>
         </tr>
         <tr>
            <td><widget:ThemedButton ui:field="btnAdd_"/></td>
         </tr>
         <tr>
            <td/>
         </tr>
      </table>
   </g:HTMLPanel>

</ui:UiBinder>