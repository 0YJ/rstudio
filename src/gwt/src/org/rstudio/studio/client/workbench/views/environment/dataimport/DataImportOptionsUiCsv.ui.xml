<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rs="urn:import:org.rstudio.core.client.widget">
	<ui:with field="res" type="org.rstudio.core.client.theme.res.ThemeResources"/>
	<ui:style>
		.mainPanel {
			display: flex;
			flex-direction: column;
		}
		.optionElement {
			display: inline-block;
			padding: 4px;
		}
		.optionsBlock {
			margin-top: 3px;
			padding-left: 7px;
			display: flex;
			flex-direction: row;
		}
		.optionsColumn {
			display: flex;
			flex-direction: column;
			padding-right: 40px;
		}
		.optionsLabel {
			margin-top: 10px;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.mainPanel}">
	    <g:Label text="Import Options:" styleName="{style.optionsLabel}"/>
		<div class="{style.optionsBlock}">
		    <div class="{style.optionsColumn}">
		        <div class="{style.optionElement}">
		        	Name:
					<g:TextBox ui:field="nameTextBox_" />
				</div>
		    </div>
			<div class="{style.optionsColumn}">
				<div class="{style.optionElement}">
				    Delimiter:
				    <g:ListBox ui:field="delimiterListBox_" />
				</div>
				<div class="{style.optionElement}">
				    Quotes:
				    <g:ListBox ui:field="quotesListBox_" />
				</div>
			</div>
			<div class="{style.optionsColumn}">
				<div class="{style.optionElement}">
					<g:CheckBox ui:field="escapeBackslashCheckBox_" text="Escape Backslash"/>
				</div>
				<div class="{style.optionElement}">
					<g:CheckBox ui:field="escapeDoubleCheckBox_" text="Escape Double"/>
				</div>
			</div>
			<div class="{style.optionsColumn}">
				<div class="{style.optionElement}">
					<g:CheckBox ui:field="columnNamesCheckBox_" text="Columns Names"/>
				</div>
				<div class="{style.optionElement}">
					<g:CheckBox ui:field="trimSpacesCheckBox_" text="Trim Spaces"/>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>