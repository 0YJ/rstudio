<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:rs="urn:import:org.rstudio.core.client.widget">
	<ui:with field='res' type='org.rstudio.core.client.theme.res.ThemeResources'/>
	<ui:style>
		.optionElement
		{
			display: inline-block;
			padding: 4px;
		}
		.optionsBlock
		{
			margin-top: 3px;
			padding: 7px;
			background-color: #FFF;
			border: 1px solid #999;
		}
	</ui:style>
	<g:HTMLPanel>
	    <g:Label text="Import Options:"/>
		<div class='{style.optionsBlock}'>
		    <div class='{style.optionElement}'>
				<g:TextBox ui:field="nameTextBox_"/> Name
			</div>
			<div class='{style.optionElement}'>
			    <g:ListBox ui:field="delimiterListBox_" /> Delimiter
			</div>
			<div class='{style.optionElement}'>
			    <g:ListBox ui:field="quotesListBox_" /> Quotes
			</div>
			<div class='{style.optionElement}'>
				<g:CheckBox ui:field="escapeBackslashCheckBox_" text='Escape Backslash'/>
			</div>
			<div class='{style.optionElement}'>
				<g:CheckBox ui:field="escapeDoubleCheckBox_" text='Escape Double'/>
			</div>
			<div class='{style.optionElement}'>
				<g:CheckBox ui:field="columnNamesCheckBox_" text="Columns Names"/>
			</div>
			<div class='{style.optionElement}'>
				<g:CheckBox ui:field="trimSpacesCheckBox_" text='Trim Spaces'/>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>