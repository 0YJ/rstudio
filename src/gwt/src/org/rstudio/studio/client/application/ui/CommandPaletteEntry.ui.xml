<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field="styles_" type="org.rstudio.studio.client.application.ui.CommandPaletteEntry.Styles">
		.entry {
			width: 100%;
			font-size: 10pt;
			padding-top: 6px;
			padding-bottom: 6px;
			padding-left: 6px;
			padding-right: 6px;
		}
		
		.entry:hover {
			background-color: #F0F0FF;
		}
		
		.selected {
			background-color: #D0D0FF;
		}
		
		.keyboard {
			border: 1px solid #a0a0a0;
			border-radius: 3px;
			padding: 3px;
			margin-left: 3px;
			margin-right: 3px;
			font-size: 8pt;
		}
		
		.shortcut {
			display: inline-block;
			margin-left: -10px;
		}
		
		.searchMatch {
			font-weight: bold;
		}
	</ui:style>
	<g:HorizontalPanel styleName="{styles_.entry}">
		<g:cell horizontalAlignment="ALIGN_LEFT">
			<g:Label ui:field="name_"></g:Label>
		</g:cell>
		<g:cell horizontalAlignment="ALIGN_RIGHT">
			<g:Label styleName="{styles_.shortcut} rstudio-fixed-width-font" ui:field="shortcut_"></g:Label>
		</g:cell>
	</g:HorizontalPanel>
</ui:UiBinder> 