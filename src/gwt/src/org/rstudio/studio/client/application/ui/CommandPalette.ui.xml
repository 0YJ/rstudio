<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style field="styles_" type="org.rstudio.studio.client.application.ui.CommandPalette.Styles">
		@eval proportionalFont org.rstudio.core.client.theme.ThemeFonts.getProportionalFont();
		@external editor_dark;

		.popup {
			height: 400px;
			width: 600px;
			border: 1px solid;
			border-radius: 4px;
			overflow: hidden;
			box-shadow: 0px 0px 22px 0px rgba(0,0,0,0.75);
		}
		
		.popup td {
			font-family: proportionalFont;
		}
		
		.searchBox {
			width: 100%;
			font-size: 14pt;
			box-sizing: border-box;
			padding: 10px;
			border: 0px;
		}
		
		.searchBar {
			padding: 15px;
			border-bottom: 1px solid;
		}
		
		.editor_dark .searchBox {
			background-color: #000000;
			color: #FFFFFF;
		}
		
		.commandList {
			height: 100%;
			width: 100%;
		}
		
		.commandPanel {
			height: 100%;
			width: 100%;
			padding-top: 10px;
		}
	</ui:style>
	<g:FlowPanel styleName="rstudio-themes-border {styles_.popup}">
		<g:HTMLPanel styleName="{styles_.searchBar} rstudio-themes-background rstudio-themes-border">
			<g:TextBox styleName="{styles_.searchBox} rstudio-themes-border" ui:field="searchBox_">
			</g:TextBox>
		</g:HTMLPanel>
		<g:ScrollPanel ui:field="scroller_" styleName="ace_editor {styles_.commandPanel}">
			<g:VerticalPanel styleName="ace_marker-layer {styles_.commandList}" ui:field="commandList_"></g:VerticalPanel>
		</g:ScrollPanel>
	</g:FlowPanel>
</ui:UiBinder> 