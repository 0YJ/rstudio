<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.explanatoryText
	{
		font-size: x-small;
	}
	</ui:style>
	<g:HTMLPanel>
      <g:VerticalPanel>
         <g:Label text="Enter the URL of the RStudio Connect server (ex. http://servername/)">
         </g:Label>
         <g:TextBox></g:TextBox>
         <g:Label text="Enter a nickname for your account (ex. jsmith; optional)">
         </g:Label>
         <g:TextBox></g:TextBox>
         <g:Label styleName="{style.explanatoryText}"
                  text="Contact your RStudio Connect server administrator if you need its URL.">
         </g:Label>
       </g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 