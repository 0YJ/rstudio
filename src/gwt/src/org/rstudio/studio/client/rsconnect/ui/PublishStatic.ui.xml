<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
   xmlns:rsc="urn:import:org.rstudio.studio.client.rsconnect.ui"
   xmlns:g="urn:import:com.google.gwt.user.client.ui">
   <ui:style>
   .accountList
   {
      height: 120px;
      margin-top: 5px;
      margin-bottom: 15px;
   }
   
   .inputField
   {
      width: 250px;
   }
   </ui:style>
   <g:HTMLPanel>
   <g:VerticalPanel>
      <g:Label text="Where would you like to publish this item?"></g:Label> 
      <rsc:RSConnectAccountList styleName="{style.accountList} {style.inputField}"
                                ui:field="accountList_">
      </rsc:RSConnectAccountList>
      <g:VerticalPanel ui:field="newContentPanel_">
         <g:Label text="Give this item a name:"></g:Label>
         <g:TextBox styleName="{style.inputField}" 
                    ui:field="contentNameTextbox_">
         </g:TextBox>
      </g:VerticalPanel>
      <g:VerticalPanel ui:field="existingContentPanel_">
         <g:Label text="Name:"></g:Label>
         <g:Label ui:field="contentNameLabel_"></g:Label>
      </g:VerticalPanel>
   </g:VerticalPanel>
   </g:HTMLPanel>
</ui:UiBinder> 