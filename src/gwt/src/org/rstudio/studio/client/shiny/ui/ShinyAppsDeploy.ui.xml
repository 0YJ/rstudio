<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.sourceDestLabels
	{
	  color: #808080;
	}

	.accountAppLists
	{
	   display: block;
	   width: 250px;
	}

	.source
	{
	  font-weight: bold;
	  margin-bottom: 10px;
	}

	</ui:style>
	<g:HTMLPanel>
	<g:Label styleName="{style.sourceDestLabels}" text="Source"></g:Label>
	<g:Label styleName="{style.source}" ui:field="sourceDir"></g:Label>
	<g:Label styleName="{style.sourceDestLabels}" text="Destination"></g:Label>
	<g:Grid>
	  <g:row>
       <g:customCell>
         <g:Label text="Account"></g:Label>
       </g:customCell>
       <g:customCell>
         <g:ListBox styleName="{style.accountAppLists}" ui:field="accountList"></g:ListBox>
       </g:customCell>
	  </g:row>
	  <g:row>
       <g:customCell>
         <g:Label text="Application"></g:Label>
       </g:customCell>
       <g:customCell>
         <g:ListBox styleName="{style.accountAppLists}" ui:field="appList"></g:ListBox>
       </g:customCell>
	  </g:row>
	  <g:row>
       <g:customCell>
         <g:Label ui:field="nameLabel" text="Name"></g:Label>
       </g:customCell>
       <g:customCell>
         <g:TextBox ui:field="appName"></g:TextBox>
       </g:customCell>
	  </g:row>
	</g:Grid>
	<g:HTMLPanel visible="false" ui:field="appInfoPanel">
	  <g:Label ui:field="urlLabel"></g:Label>
	</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 