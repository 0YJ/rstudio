<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.sourceDestLabels
	{
	  color: #808080;
	}

	.accountAppLists
	{
	   display: block;
	   width: 100%;
	}

	.source
	{
	  font-weight: bold;
	  margin-bottom: 10px;
	}

	.formTable
	{
	  width: 100%;
	}
	</ui:style>
	<g:HTMLPanel styleName="">
	<g:Label styleName="{style.sourceDestLabels}" text="Source"></g:Label>
	<g:Label styleName="{style.source}" ui:field="sourceDir"></g:Label>
	<g:Label styleName="{style.sourceDestLabels}" text="Destination"></g:Label>
	<g:Grid styleName="{style.formTable}">
	  <g:row>
       <g:customCell>
         <g:Label text="Account"></g:Label>
       </g:customCell>
       <g:customCell>
         <g:ListBox styleName="{style.accountAppLists}" ui:field="accountList"></g:ListBox>
       </g:customCell>
	  </g:row>
	  <g:row>
       <g:customCell>
         <g:Label text="Application"></g:Label>
       </g:customCell>
       <g:customCell>
         <g:ListBox styleName="{style.accountAppLists}" ui:field="appList"></g:ListBox>
       </g:customCell>
	  </g:row>
	  <g:row>
       <g:customCell>
         <g:Label text="Name"></g:Label>
       </g:customCell>
       <g:customCell>
         <g:TextBox ui:field="appName"></g:TextBox>
       </g:customCell>
	  </g:row>
	</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder> 